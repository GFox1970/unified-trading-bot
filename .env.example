
# Environment Variables for Unified Trading Bot
# =============================================
# Copy this file to .env and update with your values

# Trading Mode
LIVE_TRADING=false
TEST_MODE=true

# Bot Configuration
LOG_LEVEL=INFO
UPDATE_INTERVAL=60

# Signal Thresholds (Relaxed for Testing)
TRADING_BOT_SIGNALS_MIN_STRENGTH=0.3
TRADING_BOT_SIGNALS_MIN_CONFIDENCE=0.5
TRADING_BOT_RISK_MAX_RISK_SCORE=0.8

# Risk Management
TRADING_BOT_RISK_MAX_POSITION_SIZE=0.05
TRADING_BOT_RISK_MAX_PORTFOLIO_RISK=0.20
TRADING_BOT_RISK_STOP_LOSS_PERCENTAGE=0.02
TRADING_BOT_RISK_TAKE_PROFIT_PERCENTAGE=0.06

# Market Data
TRADING_BOT_MARKET_DATA_PROVIDER=yfinance
TRADING_BOT_MARKET_DATA_RATE_LIMIT=5

# Options Trading
TRADING_BOT_OPTIONS_ENABLED=true
TRADING_BOT_OPTIONS_MIN_VOLUME=50
TRADING_BOT_OPTIONS_MIN_OPEN_INTEREST=100
TRADING_BOT_OPTIONS_MAX_BID_ASK_SPREAD=0.20

# Paper Trading
TRADING_BOT_PAPER_TRADING_ENABLED=true
TRADING_BOT_PAPER_TRADING_INITIAL_BALANCE=100000

# Watchlist (comma-separated)
TRADING_BOT_TRADING_WATCHLIST=SPY,QQQ,AAPL,MSFT,TSLA,NVDA,GOOGL,AMZN

# Database (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot

# API Keys (Add your actual keys here)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
# POLYGON_API_KEY=your_polygon_key
# BROKER_API_KEY=your_broker_api_key
# BROKER_SECRET_KEY=your_broker_secret_key

# Notifications (Optional)
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_TO_ADDRESSES=alerts@yourdomain.com

# Webhook URL for notifications (Optional)
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
